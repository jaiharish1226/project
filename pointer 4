#include <stdio.h>
int main()
{
	int a=10;
	int b=20;
	int *ptr1;
	int *ptr2;
	ptr1=&a;
	ptr2=&b;
	printf(" a:");
	printf("\n direct access ,a = %d", a);
	printf("\n indirect access,a = %d", *ptr1);
	printf("\n the address of a = %d", &a);
	printf("\n the address of a =%d", ptr1);
	printf("the value in a is = %d",*(&a));
	*ptr1=40;
	printf("\n the indirect access a= %d", *ptr1);
	printf("\n b:");
	printf("\n the direct access ,b = %d", b);
	printf("\n the indirect access,b= %d", *ptr2);
	printf("\n the adress of b = %d", &b);
	printf("the value of b is = %d",*(&b));
	*ptr2=30;
	printf("\n indiect access b= %d",*ptr2 );
	return 0;
}
